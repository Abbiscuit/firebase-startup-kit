service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, create, update, delete: if request.auth.uid == userId;
    }
    match /usernames/{name} {
      allow read;
    }
    match /uids/{uid} {
      allow read;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}